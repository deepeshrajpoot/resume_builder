<div class="nested-fields">  
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :course %>
      <%= f.text_field :course, class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :year %>
      <%= f.text_field :year,  class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :percentage %>
      <%= f.text_field :percentage,  class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.label :grade %>
      <%= f.text_field :grade,  class: "form-control" %>
    </div>
    <div class="col-md-9">
      <%= f.label :board_or_univercity %>
      <%= f.text_field :board_or_univercity,  class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6">
      <%= link_to_remove_association "Remove Academic Credential", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>
