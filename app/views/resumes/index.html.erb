<div class="container mt-3">
  <div class="row">
    <div class="col-md-12">
      <% unless @resumes.empty? %>
        <h1>Resumes</h1>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @resumes.each do |resume| %>
              <tr>
                <td><%= resume.name %></td>
                <td><%= link_to 'Show', resume %></td>
                <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
                <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Resume', new_resume_path, class: "btn btn-dark" %>
      <% else %>
        <div class="card rounded-0">
          <div class="card-body text-center">
            <p class="lead">Hey! <span class="text-primary"><%= current_user.email %></span> you have not created any resume yet. Please click onto button below to create your first resume. </p>
            <%= link_to 'New Resume', new_resume_path, class: "btn btn-dark" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>